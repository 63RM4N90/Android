<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.63" >

            <TableRow android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/airline_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/flight_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0C81C7"
                    android:text="@string/flight_number" />

                <TextView
                    android:id="@+id/fight_number_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/departure_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0C81C7"
                    android:text="@string/departure_city" />

                <TextView
                    android:id="@+id/departure_city_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/arrival_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0C81C7"
                    android:text="@string/arrival_city" />

                <TextView
                    android:id="@+id/arrival_city_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/flight_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0C81C7"
                    android:text="@string/flight_status" />

                <TextView
                    android:id="@+id/flight_status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/airport_terminal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0C81C7"
                    android:text="@string/airport_terminal" />

                <TextView
                    android:id="@+id/airport_terminal_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/airport_gate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0C81C7"
                    android:text="@string/airport_gate" />

                <TextView
                    android:id="@+id/airport_gate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/scheduled_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0C81C7"
                    android:text="@string/scheduled_time" />

                <TextView
                    android:id="@+id/scheduled_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>